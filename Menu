def game():
    print("Bienvenu dans Donjons & Dragons")
    classe = input("Quel classe souhaites-tu ?  \n G : Guerrier \n M : Magicien \n A : Archer")

    if classe == "G":

        print("  ,   A           {}")
        print(" / \, | ,        .--.")
        print("|    =|= >      /.--.\ ")
        print(" \ /` | `       |====|")
        print("  `   |         |`::`|  ")
        print("      |     .-;`\..../`;_.-^-._")
        print("      /\ /  /  |...::..|`   :   `|")
        print("     |:'\ |   /'''::''|   .:.   |")
        print("      \ /\;-,/\   ::  |..:::::..|")
        print("      |       |       \    :    /")
        print("      |       |        \   :   / ")
        print("      |       |___/\___|`-.:.-`")
        print("      |        \_ || _/    `")
        print("      |        <_ >< _>")
        print("      |        |  ||  |")
        print("      |        |  ||  |")
        print("      |       _\.:||:./_")
        print("      |      /____/\____\ ")

    if classe == "M":
        print("MaGicIeN")
    if classe == "A":
        print("aRchEr")
def load():
    print("Nous chargeons votre sauvegarde")

def credits():
    print("Crédits")

print("        ,     \    /      ,")
print("       / \    )\__/(     / \ ")
print("      /   \  (_\  /_)   /   \ ")
