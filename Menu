print(" `              V                '")

input("Press Enter to continue...")
print("N -- Lancer une nouvelle partie")
print("L -- Charger une partie")
print("C -- Crédits")
print("Q -- Quitter")

choice = str(input())
if choice == "N":
    game()
if choice == "L":
    load()
if choice == "C":
    credits()
if choice == "Q":
    exit()
